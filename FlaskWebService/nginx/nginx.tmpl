upstream flaskapp {
    {{ range $i, $container := where .Containers "State.Running" true }}
    {{ range $j, $port := $container.Ports }}
    {{ if eq $port.PrivatePort 5000 }}
    server {{ $container.Name }}:{{ $port.PrivatePort }};
    {{ end }}
    {{ end }}
    {{ end }}
}

server {
    listen 80;

    location / {
        proxy_pass http://flaskapp;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
}
